{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "./src/**/*.{html, js, ts, vue}"
  ],
  "compilerOptions": {
    "allowJs": false,
    "noEmit": true,
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
