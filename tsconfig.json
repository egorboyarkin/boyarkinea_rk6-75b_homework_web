{
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "outDir": "./dist",
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node"
  },
  "files": [],
  "references": [
    "backend/tsconfig.json",
    "frontend/tsconfig.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
